// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String          @id @default(uuid())
  clerkId      String          @unique @map("clerk_id")
  firstName    String?         @map("first_name")
  lastName     String?         @map("last_name")
  email        String?
  active       Boolean         @default(true)
  createdAt    DateTime        @default(now()) @map("created_at")
  updatedAt    DateTime        @default(now()) @updatedAt @map("updated_at")
  medications  Medication[]
  dailyTasks   DailyTask[]
  templates    DayTemplate[]
  assignedDays AssignedDay[]
  patientInfo  PatientInfo?
  contacts     Contact[]
  sosMedicines SosMedicine[]
  symptomLogs  SymptomLog[]

  @@map("users")
}

model Medication {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  purpose   String?
  dosage    String?
  time      String?  // Optional "HH:MM" format
  timeLabel String?  @map("time_label") // "Before Breakfast", etc.
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs MedicationLog[]

  @@map("medications")
}

model MedicationLog {
  id           String    @id @default(uuid())
  medicationId String    @map("medication_id")
  date         DateTime  @db.Date
  status       String    // "taken" | "skipped"
  takenAt      DateTime? @map("taken_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  medication Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)

  @@unique([medicationId, date])
  @@map("medication_logs")
}

// ============================================
// DAILY TASKS SYSTEM
// ============================================

model DailyTask {
  id             String    @id @default(uuid())
  userId         String    @map("user_id")
  date           DateTime  @db.Date
  title          String
  description    String?
  isCompleted    Boolean   @default(false) @map("is_completed")
  order          Int       @default(0)
  sourceType     String    @default("custom") @map("source_type") // "custom" | "template"
  templateId     String?   @map("template_id")
  templateTaskId String?   @map("template_task_id")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  template     DayTemplate?  @relation(fields: [templateId], references: [id], onDelete: SetNull)
  templateTask TemplateTask? @relation(fields: [templateTaskId], references: [id], onDelete: SetNull)

  @@map("daily_tasks")
}

model DayTemplate {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  color     String   @default("#3B82F6") // Default blue
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks        TemplateTask[]
  assignedDays AssignedDay[]
  dailyTasks   DailyTask[]

  @@map("day_templates")
}

model TemplateTask {
  id          String   @id @default(uuid())
  templateId  String   @map("template_id")
  title       String
  description String?
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  template   DayTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  dailyTasks DailyTask[]

  @@map("template_tasks")
}

model AssignedDay {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  date       DateTime @db.Date
  templateId String   @map("template_id")
  createdAt  DateTime @default(now()) @map("created_at")

  user     User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  template DayTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([userId, date, templateId]) // Can't assign same template twice to same day
  @@map("assigned_days")
}

// ============================================
// PATIENT INFO & CONTACTS (Quick Reference)
// ============================================

model PatientInfo {
  id                    String    @id @default(uuid())
  userId                String    @unique @map("user_id")
  name                  String?
  dateOfBirth           DateTime? @map("date_of_birth") @db.Date
  bloodType             String?   @map("blood_type")
  allergies             String?   // Comma-separated or free text
  diagnosis             String?   // Cancer type/diagnosis
  insuranceProvider     String?   @map("insurance_provider")
  insurancePolicyNumber String?   @map("insurance_policy_number")
  emergencyContactName  String?   @map("emergency_contact_name")
  emergencyContactPhone String?   @map("emergency_contact_phone")
  notes                 String?   // Any additional notes
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("patient_info")
}

model Contact {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  role      String?  // e.g., "Doctor", "Nurse Coordinator", "Hotel Manager"
  phone     String?
  email     String?
  category  String   // "medical_team" | "hospital" | "logistics" | "personal"
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("contacts")
}

// ============================================
// SOS MEDICINES (As-needed medications)
// ============================================

model SosMedicine {
  id           String          @id @default(uuid())
  userId       String          @map("user_id")
  name         String
  purpose      String?         // What symptom/condition it's for
  dosage       String?         // How much to take
  instructions String?         // Usage instructions
  isActive     Boolean         @default(true) @map("is_active")
  createdAt    DateTime        @default(now()) @map("created_at")
  updatedAt    DateTime        @updatedAt @map("updated_at")

  user User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs SosMedicineLog[]

  @@map("sos_medicines")
}

model SosMedicineLog {
  id            String      @id @default(uuid())
  sosMedicineId String      @map("sos_medicine_id")
  takenAt       DateTime    @map("taken_at") // Full timestamp
  notes         String?     // What was happening/symptoms
  createdAt     DateTime    @default(now()) @map("created_at")

  sosMedicine SosMedicine @relation(fields: [sosMedicineId], references: [id], onDelete: Cascade)

  @@map("sos_medicine_logs")
}

// ============================================
// SYMPTOM TRACKING
// ============================================

model SymptomLog {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  date      DateTime @db.Date // The day this log is for (local date)
  content   String   // Free text: "Nausea in morning, fatigue at 3pm"
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date]) // One log per day per user
  @@map("symptom_logs")
}
